<section class="hero py-4">
    <div class="container mx-auto flex items-center justify-center ">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Looking for best decorations ?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Best place !</h1>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Call Now</button>
        </div>
        <div class="w-1/2">
            <img src="/img/main.png" alt="main-decoration">
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8">
    <h1 class="tex-xl font-bold mb-8">All Decorations</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">

        <% decorations.forEach(function(decoration){ %>
        <div class="w-full md:w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= decoration.image %>" alt="events">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= decoration.name %> </h2>
                <span class="size py-1 px-4 rounded-full text-xs"><%= decoration.type %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">&#8377;<%= decoration.price %></span>
                    <button data-decoration="<%= JSON.stringify(decoration) %> " class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>

    </div>
</section>